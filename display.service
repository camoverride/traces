[Unit]
Description=Display Traces
After=default.target

[Service]
Type=simple
Restart=always
WorkingDirectory=/home/%u/traces
ExecStart=/home/%u/traces/.venv/bin/python /home/%u/traces/run_display.py
StandardOutput=journal
StandardError=journal
Environment="PATH=/home/%u/traces/.venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

[Install]
WantedBy=default.target
